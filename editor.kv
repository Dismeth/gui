#:kivy 1.1.0

Root:

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Save'
                on_release: root.show_save()
			Button:
				text: 'Label Encode'
				on_release: root.label_encode()
			Button:
				text: 'Settings'
				on_release: root.show_settings()
			Button:
				text: 'Run Bayesian Network'
				on_release: root.show_nbn()

        BoxLayout:
            RstDocument:
                text: root.output_text
                show_errors: False
		BoxLayout
			size_hint: 1, 0.1
			RstDocument:
				id: console
				text: root.output_console

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path,text_input.text)
				
<Settings>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
		BoxLayout:
			size_hint_y: None
            height: 30
			Label:
				text: "Test Set Size"
			TextInput:
				id: test_set_size
				height: 30
				multiline: False
				text: 0.4
			Label:
				text: "Description"
		BoxLayout:
			size_hint_y: None
            height: 30
			Label:
				text: "Test Set Size"
			TextInput:
				id: testing
				height: 30
				length: 10
				multiline: False
				text: "0.4"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Apply Settings"
                on_release: root.settings_save()
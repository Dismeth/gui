#:kivy 1.1.0

<Menu@Button>:
	
<TitleBox@BoxLayout>:
    size_hint_y: None
    height: 20
<TitleLabel@Label>:
	markup: True
	
Root:

    BoxLayout:
        orientation: 'vertical'
		TitleBox:
			TitleLabel:
				text: "[b]Main [color=09B9E5]Menu[/color][/b]"
        BoxLayout:
            size_hint_y: None
            height: 30
            Menu:
                text: 'Load'
                on_release: root.show_load()
            Menu:
                text: 'Save'
                on_release: root.show_save()
			Menu:
				text: 'Label Encode'
				on_release: root.label_encode()
			Menu:
				text: 'Split / CrossValidation'
				on_release: root.split_data()
			Menu:
				text: 'Settings'
				on_release: root.show_settings()
		TitleBox:
			TitleLabel:
				text: "[b]Model [color=09B9E5]Selection[/color][/b]"
		BoxLayout:
            size_hint_y: None
            height: 30
            Menu:
				text: 'Naive Bayesian Network'
				on_release: root.show_nbn()
            Menu:
                text: 'Boosted Trees'
				on_release: root.feedback("To be implemented.")
			Menu:
				text: 'Decision Trees'
				on_release: root.feedback("To be implemented.")
			Menu:
				text: 'Help'
				on_release: root.feedback("To be implemented.")
        BoxLayout:
            RstDocument:
                text: root.output_text
                show_errors: False
		BoxLayout
			size_hint: 1, 0.1
			RstDocument:
				id: console
				text: root.output_console

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path,text_input.text)

<SetBox@BoxLayout>:
    size_hint_y: None
    height: 30				
				
<SetText@TextInput>:
    height: 30
	length: 10
	multiline: False
	
<SetLabel@Label>:
    halign: 'right'
    valign: 'middle'
	bold: True
	
<SetDesc@Label>:
    halign: 'left'
    valign: 'middle'
	bold: False
	text_size: cm(6), cm(3)
<SetCategory@Label>:
    halign: 'center'
    valign: 'middle'
	bold: True
	
				
<Settings>:
	test_set_size: test_set_size
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
		SetBox:
			SetCategory:
				text: "Label Encoding"
		SetBox:
			SetLabel:
				text: "Test Set Size"
			SetText:
				id: test_set_size
				text: ""
			SetDesc:
				text: "Description long before the shit got real"
		SetBox:
			SetLabel:
				text: "Test Set Size"
			SetText:
				id: testing
				text: ""
			SetDesc:
				text: "Description"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Apply Settings"
                on_release: root.settings_save(test_set_size.text)